<html>
  <head>
    <title>Ejs_Web_Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
  </head>
  <body>
    <h1 class="text-center">This is my first Ejs Web Page..!</h1><br>

    <h2>Name is <%= name %></h2>
    <h2>Email is <%= email %></h2>
    <h2>Contact is <%= contact %></h2>
    <br><hr>

    <div class="d-flex justify-content-center">
      <table class="table table-striped table-bordered w-auto">
        <thead>
          <tr>
            <th>Subject Name</th>
            <th>Marks</th>
          </tr>
        </thead>
        <tbody>
          <% marks.forEach((item, index) => { %>
            <tr>
              <td>Sub: <%= index + 1 %></td>
              <td><%= item %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

  </body>
</html>
